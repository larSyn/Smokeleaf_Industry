  <!--========== Space Bucket ==========-->
  
  <ThingDef ParentName="MSI_BuildingBase">
    <defName>SpaceBucket</defName>
    <label>space bucket</label>
    <description>A self-contained growing system. Uses a fair amount of power for a single plant, but grows plants extremely quickly. Ideal for growing in confined spaces.  Requires heat.</description>
    <thingClass>Building_PlantGrower</thingClass>
    <graphicData>
      <texPath>Things/Buildings/MSI_spaceBucket</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    <shaderType>CutoutComplex</shaderType>
      <shadowData>
        <volume>(0.3, 0.6, 0.3)</volume>
      </shadowData>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
    </graphicData>
    <uiIconPath>UI/Icons/MSI_spaceBucket_icon</uiIconPath>
    <altitudeLayer>FloorEmplacement</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>40</pathCost>
    <fillPercent>0.25</fillPercent>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToBuild>600</WorkToBuild>
      <Mass>3</Mass>
      <Flammability>1.0</Flammability>
    </statBases>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
    <costList>
      <Steel>25</Steel>
      <Component>1</Component>
    </costList>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
    <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>350</basePowerConsumption>
    <startElectricalFires>true</startElectricalFires>
      </li>
    <li Class="CompProperties_Glower">
        <overlightRadius>4.0</overlightRadius>
        <glowRadius>2.0</glowRadius>
        <glowColor>(225,235,250,0)</glowColor>
      </li>
    </comps>
    <fertility>5.0</fertility>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <building>
      <defaultPlantToGrow>PlantSmokeleaf</defaultPlantToGrow>
      <sowTag>Hydroponic</sowTag>
    </building>
    <researchPrerequisites>
      <li>AdvancedSmokeleafCultivation</li>
    </researchPrerequisites>
      <rotatable>false</rotatable>
    <designationCategory>MSI</designationCategory>
  </ThingDef>	
  
</Defs>