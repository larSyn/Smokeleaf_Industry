    <description>Leftover stalks and leaves from processing the smokeleaf plant.</description>
    <graphicData>
      <texPath>Things/Items/MSI_hemp</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <MarketValue>1.0</MarketValue>
      <Mass>0.1</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>4</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
  </ThingDef>
  
	<!--=== Smokeleaf Buds ===-->
  
  <ThingDef ParentName="MSI_OrganicProductBase">
    <defName>SmokeleafBuds</defName>
    <label>smokeleaf buds</label>
    <description>The flower of the smokeleaf plant. Contains all the good stuff.</description>
    <graphicData>
      <texPath>Things/Items/MSI_bud</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <MarketValue>3.5</MarketValue>
      <Mass>0.03</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>4</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>PlantMatter</li>
    </thingCategories>
  </ThingDef>
  
	<!--=== Smokeleaf Butter ===-->
  
  <ThingDef ParentName="MSI_OrganicProductBase">
    <defName>SmokeleafButter</defName>
    <label>smokeleaf butter</label>
    <description>The flower of the smokeleaf plant simmered with milk. Creates a potent base for edible medicinals.</description>
    <graphicData>
      <texPath>Things/Items/MSI_butter</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>5.0</MarketValue>
      <Flammability>0.25</Flammability>
    </statBases>
    <thingCategories>
      <li>Foods</li>
    </thingCategories>
  </ThingDef>
  
  <!--=== Smokeleaf Seeds ===-->
  
  <ThingDef ParentName="MSI_OrganicProductBase">
    <defName>SmokeleafSeed</defName>
    <label>smokeleaf seed</label>
    <description>The seed of the smokeleaf plant.</description>
    <graphicData>
      <texPath>Things/Items/MSI_seed</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>1.0</MarketValue>
      <Flammability>0.5</Flammability>
    </statBases>
    <thingCategories>
      <li>PlantMatter</li>
    </thingCategories>
  </ThingDef>
  
  <!--=== Hemp Flour ===-->
  
  <ThingDef ParentName="MSI_PlantFoodRawBase">
    <defName>HempFlour</defName>
    <label>hemp flour</label>
    <description>The seed of the smokeleaf plant can be processed into a flour for baking.</description>
    <graphicData>
      <texPath>Things/Items/MSI_flour</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>2.5</MarketValue>
      <Flammability>1.0</Flammability>
    </statBases>
	<ingestible>
      <foodType>Plant, Processed</foodType>
    </ingestible>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>120</daysToRotStart>
		<rotDestroys>true</rotDestroys>
      </li>
    </comps>
  </ThingDef>
  
    <!--=== Hempoline ===-->
	
  <ThingDef ParentName="MSI_OrganicProductBase">
    <defName>Hempoline</defName>
    <label>hempoline</label>
    <description>A safe, stable fuel produced from refined smokeleaf stalks. Non-volatile, but goes bad eventually.</description>
    <graphicData>
      <texPath>Things/Items/MSI_hempoline</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stackLimit>400</stackLimit>
	<deepCommonality>2</deepCommonality>
	<deepCountPerCell>300</deepCountPerCell>
	<statBases>
		<MaxHitPoints>50</MaxHitPoints>
		<MarketValue>8</MarketValue>
		<Mass>0.05</Mass>
		<DeteriorationRate>1.0</DeteriorationRate>
	</statBases>
	<comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>120</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
  </ThingDef>
  
    <!--=== CBD ===-->
	  
  <ThingDef ParentName="MSI_OrganicProductBase">
    <defName>CBD</defName>
    <label>CBD</label>
    <description>A new compound identified in the smokeleaf plant that has vast medical potential.  Similar to neutroamine, it is useless on its own, but can be combined with other indgredients to make other drugs.</description>
    <graphicData>
      <texPath>Things/Items/MSI_CBD</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>10</MarketValue>
      <Flammability>0.5</Flammability>
    </statBases>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
  </ThingDef>
  
    <!--=== Infused Medicine ===-->  
  
  <ThingDef ParentName="MSI_ResourceBase">
    <defName>InfusedMedicine</defName>
    <label>infused medicine</label>
    <description>Medicine infused with CBD. Slightly more effective than mormal medicine and provides a mild feeling of euphoria.</description>
    <thingClass>Medicine</thingClass>
    <graphicData>
      <texPath>Things/Items/MSI_medicine</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <MarketValue>25</MarketValue>
      <Mass>0.5</Mass>
      <Flammability>1.0</Flammability>
      <MedicalPotency>1.50</MedicalPotency>
      <DeteriorationRate>6</DeteriorationRate>
      <WorkToMake>750</WorkToMake>
    </statBases>
    <thingCategories>
      <li>Medicine</li>
    </thingCategories>
    <costList>
      <Medicine>1</Medicine>
      <Neutroamine>1</Neutroamine>
      <CBD>1</CBD>
    </costList>
    <recipeMaker>
      <workSpeedStat>DrugProductionSpeed</workSpeedStat>
      <workSkill>Intellectual</workSkill>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
      <researchPrerequisite>SmokeleafPharmacology</researchPrerequisite>
      <skillRequirements>
        <li>
          <skill>Medicine</skill>
          <minLevel>8</minLevel>
        </li>
        <li>
          <skill>Crafting</skill>
          <minLevel>4</minLevel>
        </li>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>
  
	<!--=== Infused Meal ===--> 
	  
  <ThingDef ParentName="MSI_MealRottable">
    <defName>MealInfused</defName>
    <label>infused meal</label>
    <description>A filling dish that also gives a slight buzz.</description>
    <graphicData>
      <texPath>Things/Items/MSI_meal</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>27</MarketValue>
      <WorkToMake>450</WorkToMake>
    </statBases>
    <ingestible>
      <preferability>MealFine</preferability>
	  <tasteThought>AteFineMeal</tasteThought>
	  <nutrition>0.95</nutrition>
	  <joy>0.8</joy>
      <joyKind>Chemical</joyKind>	  
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>Meal_Eat</ingestSound>
	  <outcomeDoers>
	    <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>InfusedBuzz</hediffDef>
          <severity>0.5</severity>
        </li>
	  </outcomeDoers>
    </ingestible>
  </ThingDef>  
	  
</Defs>